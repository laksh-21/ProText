<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/add"
            motion:layout_constraintEnd_toEndOf="@+id/delete"
            android:layout_width="@dimen/iconButtonSize"
            android:layout_height="@dimen/iconButtonSize"
            motion:layout_constraintBottom_toBottomOf="@+id/delete"
            motion:layout_constraintTop_toTopOf="@+id/delete"
            motion:layout_constraintStart_toStartOf="@+id/delete">
            <CustomAttribute
                motion:attributeName="enabled"
                motion:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/delete"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/iconButtonSize"
            android:layout_height="@dimen/iconButtonSize"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="enabled"
                motion:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/edit"
            motion:layout_constraintEnd_toEndOf="@+id/delete"
            android:layout_width="@dimen/iconButtonSize"
            android:layout_height="@dimen/iconButtonSize"
            motion:layout_constraintBottom_toBottomOf="@+id/delete"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="@+id/delete"
            motion:layout_constraintStart_toStartOf="@+id/delete">
            <CustomAttribute
                motion:attributeName="enabled"
                motion:customBoolean="false" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="@dimen/iconButtonSize"
            motion:layout_constraintTop_toTopOf="@+id/delete"
            motion:layout_constraintBottom_toBottomOf="@+id/delete"
            android:layout_width="@dimen/iconButtonSize"
            android:id="@+id/edit"
            motion:layout_constraintEnd_toStartOf="@+id/delete"
            android:layout_marginEnd="8dp"
            android:elevation="1dp" >
            <CustomAttribute
                motion:attributeName="enabled"
                motion:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/delete"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/iconButtonSize"
            android:layout_height="@dimen/iconButtonSize"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            android:elevation="1dp" >
            <CustomAttribute
                motion:attributeName="enabled"
                motion:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/add"
            motion:layout_constraintEnd_toEndOf="@+id/delete"
            android:layout_width="@dimen/iconButtonSize"
            android:layout_height="@dimen/iconButtonSize"
            motion:layout_constraintBottom_toBottomOf="@+id/delete"
            motion:layout_constraintTop_toTopOf="@+id/delete"
            motion:layout_constraintStart_toStartOf="@+id/delete"
            android:alpha="0" >
            <CustomAttribute
                motion:attributeName="enabled"
                motion:customBoolean="false" />
        </Constraint>
    </ConstraintSet>
</MotionScene>